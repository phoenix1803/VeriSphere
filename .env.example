# Database Configuration
DATABASE_URL=postgresql://verisphere:verisphere123@localhost:5432/verisphere
REDIS_URL=redis://localhost:6379/0

# Message Queue
CELERY_BROKER_URL=pyamqp://verisphere:verisphere123@localhost:5672//
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# Environment
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Security
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# External API Keys (Required)
SERPER_API_KEY=your_serper_api_key_here
GOOGLE_VISION_API_KEY=your_google_vision_api_key_here
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Google Cloud Configuration
GOOGLE_APPLICATION_CREDENTIALS=config/google_service_account_key.json

# Blockchain Configuration
ALMANAC_API_KEY=your_almanac_api_key_here
BLOCKCHAIN_NETWORK=testnet

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20

# Processing Configuration
MAX_CONCURRENT_CLAIMS=50
CLAIM_TIMEOUT_SECONDS=300
AGENT_TIMEOUT_SECONDS=60

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# File Storage
UPLOAD_MAX_SIZE=10485760  # 10MB
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,webp,gif

# Cache Configuration
CACHE_TTL_SECONDS=3600
SEARCH_CACHE_TTL_SECONDS=1800

# Crisis Communication
ALERT_WEBHOOK_URL=https://your-webhook-url.com/alerts
SLACK_WEBHOOK_URL=https://hooks.slack.com/your-webhook
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# Development
RELOAD=true
ACCESS_LOG=true